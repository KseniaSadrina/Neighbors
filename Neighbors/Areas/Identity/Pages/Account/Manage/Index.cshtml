@page
@model IndexModel


@{
    ViewData["Title"] = "Profile";
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model=Model.StatusMessage />

<ul class="nav navbar-left">
    <li class=""><a href="#edit-profile" data-toggle="tab" aria-expanded="false">Home</a></li>
    <li class=""><a href="#my-product" data-toggle="tab" aria-expanded="true">My products</a></li>
    <li class=""><a href="#borrowed-product" data-toggle="tab" aria-expanded="true">Borrowed product</a></li>
    <li class=""><a href="#my-borrowed" data-toggle="tab" aria-expanded="true">My borrowed</a></li>
</ul>
<div id="myTabContent" class="tab-content">
    <div class="row">
        <div class="col-md-6">
            <div class="tab-pane fade active in" id="edit-profile">
                @{await Html.RenderPartialAsync("/Areas/Identity/Pages/Account/Manage/UserPages/_editUser.cshtml", this.Model);}
            </div>
            <div class="tab-pane fade" id="my-product">
                @{await Html.RenderPartialAsync("/Areas/Identity/Pages/Account/Manage/UserPages/_ShowUserProducts.cshtml", (await Model.GetMyProducts()));}
            </div>
            <div class="tab-pane fade" id="borrowed-product">
               <p>Borrowed products</p>
            </div>
            <div class="tab-pane fade" id="my-borrowed">
                <p>My borrowed</p>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
