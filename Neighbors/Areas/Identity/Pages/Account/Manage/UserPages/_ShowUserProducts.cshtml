@model ICollection<Neighbors.Models.Product>


<table class="table table-striped table-hover ">
    <thead>
        <tr class="info">
            <th>Product Name</th>
            <th>Category</th>
            <th>Price</th>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <button type="button" class="btn-info btn-xs" data-toggle="modal" data-target="#myProductModal">Return</button>
                <a asp-controller="Products" asp-action="Edit" asp-route-id="@item.Id" class="text-info">Edit</a>
                <div id="myProductModal" class="modal">
                    <div class="modal-dialog p-5">
                        <div class="modal-content p-5">
                            <div class="modal-body">
                                <p>Are you sure you want to delete @item.Name ?</p>
                                <div class="modal-footer">
                                    <form asp-controller="Products" asp-action="Delete" asp-route-id="@item.Id" method="delete">
                                        <input type="submit" value="Yes" class="btn btn-primary btn-sm" />
                                        <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">No</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>



