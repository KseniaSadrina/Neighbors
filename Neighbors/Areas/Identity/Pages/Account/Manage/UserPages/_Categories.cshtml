@model ICollection<Neighbors.Models.Category>

<table class="table table-striped table-hover ">
    <thead>
        <tr class="info">
            <th>Category ID</th>
            <th>Category Name</th>
            <th>Number of products</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Products.Count)
                </td>
                <td>
                    <button type="button" class="btn-info btn-xs" data-toggle="modal" data-target="#myCategoryModal">Delete</button>
                    <a asp-controller="Categories" asp-action="Edit" asp-route-id="@item.Id" class="text-info">Edit</a>
                    <div id="myCategoryModal" class="modal">
                        <div class="modal-dialog p-5">
                            <div class="modal-content p-5">
                                <div class="modal-body">
                                    <p>Are you sure you want to delete @item.Name category ?</p>
                                    <div class="modal-footer">
                                        <form asp-controller="Categories" asp-action="Delete" asp-route-id="@item.Id" method="delete">
                                            <input type="submit" value="Yes" class="btn btn-primary btn-sm" />
                                            <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">No</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

