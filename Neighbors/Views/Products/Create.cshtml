@model Neighbors.Models.Product

@{
    ViewData["Title"] = "Offer a product";
}

<h2>Offer a new product</h2>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddNewProduct">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group">
                <button type="button" onclick="location.href='@Url.Action("Create", "Categories")'">Add New Category</button>
            </div>
            <div class="form-group">
                <!-- should automatically be the user ID ??? -->
                <label asp-for="OwnerId" class="control-label"></label>
                <!-- After merging ksenya commit, add the following -
        <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
            -->
                <input asp-for="OwnerId" class="form-control" />
                <span asp-validation-for="OwnerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BorrowsDays" class="control-label"></label>
                <input asp-for="BorrowsDays" class="form-control" />
                <span asp-validation-for="BorrowsDays" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Offer" class="btn btn-default" />
            </div>
        </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>


    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
